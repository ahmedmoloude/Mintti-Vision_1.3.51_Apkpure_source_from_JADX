<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/iv_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_85" android:src="@drawable/ic_tub"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/def_height" android:layout_marginLeft="@dimen/dp_40" android:layout_marginTop="@dimen/def_height" android:layout_marginRight="@dimen/dp_30">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_phone" android:layout_centerVertical="true"/>
        <EditText android:textSize="@dimen/sp_16" android:textColor="@color/colorEditText" android:id="@+id/et_login_phone" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_15" android:hint="@string/login_phone" android:singleLine="true" android:layout_centerVertical="true"/>
    </LinearLayout>
    <View android:background="@color/lightGray" android:layout_width="match_parent" android:layout_height="@dimen/dp_1" android:layout_marginLeft="@dimen/dp_30" android:layout_marginRight="@dimen/dp_30"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/def_height" android:layout_marginLeft="@dimen/dp_40" android:layout_marginRight="@dimen/dp_30">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_password" android:layout_centerVertical="true"/>
        <EditText android:textSize="@dimen/sp_16" android:textColor="@color/colorEditText" android:id="@+id/et_login_password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/dp_15" android:hint="@string/login_password" android:singleLine="true" android:layout_centerVertical="true" android:inputType="textPassword"/>
    </LinearLayout>
    <View android:background="@color/lightGray" android:layout_width="match_parent" android:layout_height="@dimen/dp_1" android:layout_marginLeft="@dimen/dp_30" android:layout_marginRight="@dimen/dp_30"/>
    <Button android:id="@+id/bt_login" android:layout_marginTop="@dimen/dp_87" android:text="@string/btn_login" style="@style/bigButton"/>
    <LinearLayout android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="@dimen/dp_300" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_10">
        <TextView android:textSize="@dimen/sp_14" android:textColor="@drawable/common_text_select" android:id="@+id/tv_login_sign" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sign_up" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/sp_14" android:textColor="@drawable/common_text_select" android:id="@+id/tv_foget_password" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/forget_password"/>
    </LinearLayout>
</LinearLayout>
